<div class="fixed bottom-4 right-4 w-96 bg-gray-900 rounded-lg shadow-2xl overflow-hidden opacity-90 hover:opacity-100 transition-opacity duration-200 border border-gray-700" 
     id="dev-terminal-window" 
     data-controller="terminal"
     style="z-index: 50;">
  <div class="flex items-center justify-between px-4 py-2 bg-gray-800 border-b border-gray-700 cursor-move"
       data-action="mousedown->terminal#startDragging touchstart->terminal#startDragging"
       data-terminal-target="handle">
    <div class="flex items-center space-x-2">
      <button data-action="click->terminal#close" class="w-3 h-3 bg-red-500 rounded-full hover:bg-red-600 transition-colors"></button>
      <button data-action="click->terminal#minimize" class="w-3 h-3 bg-yellow-500 rounded-full hover:bg-yellow-600 transition-colors"></button>
      <button data-action="click->terminal#maximize" class="w-3 h-3 bg-green-500 rounded-full hover:bg-green-600 transition-colors"></button>
    </div>
    <div class="text-gray-400 text-sm font-mono select-none">DAN - Digital Analysis Network</div>
    <div class="w-4"></div>
  </div>
  
  <div class="transition-all duration-300" data-terminal-target="content">
    <div class="h-64 overflow-y-auto p-4 font-mono text-sm scroll-smooth" id="dev-terminal">
      <div id="terminal-updates" class="space-y-2" data-terminal-target="updates">
        <!-- Messages will be inserted here -->
      </div>
    </div>
  </div>
</div> 