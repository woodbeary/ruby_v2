<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Incidents</h1>
    <%= link_to "New Incident", new_incident_path, 
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded",
        data: { 
          turbo_frame: "modal",
          controller: "incident-actions",
          log_message: "ðŸ”§ Opening new incident form..."
        } %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" id="incidents">
        <%= render @incidents %>
      </tbody>
    </table>
  </div>
</div>

<%= turbo_frame_tag "modal" %>