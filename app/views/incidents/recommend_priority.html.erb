<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center">
    <div class="bg-white rounded-lg p-8 max-w-md w-full">
      <h2 class="text-2xl font-bold mb-4">Priority Recommendation</h2>
      
      <div class="mb-6">
        <p class="text-gray-600">Based on our analysis, we recommend:</p>
        <p class="text-2xl font-bold text-center my-4"><%= @recommended_priority %></p>
        <p class="text-gray-600">Would you like to use this priority level?</p>
      </div>

      <div class="flex justify-end space-x-2">
        <%= button_to "Keep Original", incident_path(@incident), 
            method: :patch,
            params: { incident: { priority: @incident.priority } },
            class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
            
        <%= button_to "Use Recommended", incident_path(@incident),
            method: :patch,
            params: { incident: { priority: @recommended_priority } },
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
<% end %> 